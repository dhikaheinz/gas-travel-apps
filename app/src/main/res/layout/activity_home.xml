<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    android:background="@color/green">

        <RelativeLayout
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_alignParentLeft="true"
                android:id="@+id/imglogo"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_info"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:fillColor="#009587"
            app:pageColor="#000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#000"
            app:strokeWidth="1dp"
            app:indicatorMarginVertical="5dp"/>

    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardElevation="10dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="#FFF0F0F0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-100dp">

            <GridLayout
                android:layout_margin="10dp"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:focusable="true"
                    android:clickable="true"
                    android:id="@+id/wisata"
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:layout_margin="10dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="30dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:src="@drawable/logo2"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp" />

                        <TextView
                            android:layout_marginTop="5sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tempat Wisata"
                            android:textSize="15sp"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/tipsBerwisata"
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:layout_margin="10dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:src="@drawable/logo5"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp" />

                        <TextView
                            android:layout_marginTop="5sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tips Berwisata"
                            android:textSize="15sp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/peraturan"
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:layout_margin="10dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:src="@drawable/logo3"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp" />

                        <TextView
                            android:layout_marginTop="5sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Peraturan Berwisata"
                            android:textSize="15sp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/infoAplikasi"
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:layout_margin="10dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:src="@drawable/logo4"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp" />

                        <TextView
                            android:layout_marginTop="5sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Info Aplikasi"
                            android:textSize="15sp"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </GridLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>